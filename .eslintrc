env:
  browser: true
  node: true
plugins:
  - react
ecmaFeatures:
  jsx: true
  defaultParams: true
  arrowFunctions: true
  templateStrings: true
  objectLiteralShorthandProperties: false
rules:
  max-len: [2, 80, 2]
  no-shadow: 0
  semi: [2, "always"]
  quotes: [2, "single"]
  strict: [2, "global"]
  no-underscore-dangle: 0
  no-debugger: 2
  no-unused-vars: [2, {args: "none"}]
  indent: [2, 2, {SwitchCase: 1, VariableDeclarator: 2}]
  no-single-tests: 2
  no-test-utils: 2
  react/jsx-key: 2
  react/jsx-no-duplicate-props: 2
  react/prop-types: 1
